%Touque 12
var new_word : string := " "
var number : int
var word : string

put "Please enter a word: " ..
get word
for i : 1 .. length (word)
    if i mod 2 = 0 then
        if word (i) >= "a" and word (i) <= "z" then
            number := ord (word (i)) - ord ("a") + ord ("A")
            new_word += chr (number)
        else
            new_word += word (i)
        end if
    else
        if word (i) >= "a" and word (i) <= "z" then
            new_word += word (i)
        else
            number := ord (word (i)) + ord ("z") - ord ("Z")
            new_word += chr (number)
        end if
    end if
end for
put new_word


%Touque 13
var first_half : int := 0
var new_word : string := " "
var number : int
var word : string

put "Please enter a word: " ..
get word
if length (word) mod 2 = 0 then % if word has even number of letters
    first_half += length (word) div 2
    for i : 1 .. first_half % first half
        if word (i) >= "a" and word (i) <= "z" then
            number := ord (word (i)) - ord ("a") + ord ("A")
            new_word += chr (number)
        else
                new_word += word (i)
        end if
    end for
    for i : first_half + 1 .. length (word) %second half
        if word (i) >= "a" and word (i) <= "z" then
            new_word += word (i)
        else
            number := ord (word (i)) + ord ("z") - ord ("Z")
            new_word += chr (number)
        end if
    end for
elsif length (word) mod 2 not= 0 then     % if word has odd number of letters
    first_half += ceil (length (word) / 2) - 1
   for i : 1 .. first_half % first half
        if word (i) >= "a" and word (i) <= "z" then
            number := ord (word (i)) - ord ("a") + ord ("A")
            new_word += chr (number)
        else
                new_word += word (i)
        end if
    end for
    for i : first_half + 1 .. length (word) %second half
        if word (i) >= "a" and word (i) <= "z" then
            new_word += word (i)
        else
            number := ord (word (i)) + (ord ("z") - ord ("Z"))
            new_word += chr (number)
        end if
    end for
end if
put new_word


%Touque 14
var first_half : int := 0
var new_word : string := " "
var number : int
var word : string

put "Please enter a word: " ..
get word
if length (word) mod 2 = 0 then % if word has even number of letters
    first_half += length (word) div 2
    for i : 1 .. first_half % first half
        if word (i) >= "a" and word (i) <= "z" then
            new_word += word (i)
        else
            number := ord (word (i)) + ord ("z") - ord ("Z")
            new_word += chr (number)
        end if
    end for
    for i : first_half + 1 .. length (word) %second half
        if word (i) >= "a" and word (i) <= "z" then
            number := ord (word (i)) - ord ("a") + ord ("A")
            new_word += chr (number)
        else
            new_word += word (i)
        end if
    end for
elsif length (word) mod 2 not= 0 then     % if word has odd number of letters
    first_half += ceil (length (word) / 2) - 1
    for i : 1 .. first_half  % first half
        if word (i) >= "a" and word (i) <= "z" then
            new_word += word (i)
        else
            number := ord (word (i)) + ord ("z") - ord ("Z")
            new_word += chr (number)
        end if
    end for
    for i : first_half + 1 .. length (word) %second half
        if word (i) >= "a" and word (i) <= "z" then
            number := ord (word (i)) - ord ("a") + ord ("A")
            new_word += chr (number)
        else
            new_word += word (i)
        end if
    end for
end if
put new_word


%Touque 15
var first_half : int := 0
var new_word : string := " "
var number : int
var word : string

put "Please enter a word: " ..
get word
for i : 1 .. length (word) - 1
    put word (i), " " ..
end for
put word (*)


%Touque 16
var first_half : int := 0
var new_word : string := " "
var number : int
var word : string

put "Please enter a word: " ..
get word
for i : 1 .. length (word) - 1
    put word (i) ..
        for j : 1 .. i
            put " " ..
        end for
end for
put word (*)


%Touque 17
var first_half : int := 0
var new_word : string := " "
var number : int
var word : string

put "Please enter a word: " ..
get word
for i : 1 .. length (word) - 1
    put word (i) ..
        for decreasing j : length (word) - 1 .. i
            put " " ..
        end for
end for
put word (*)


%Question 1
var word : string
var first_word : string := " "

put "Please enter 'done' to exit the program."
put "Please enter a word: " ..
get word
first_word := word
loop
    put "Please enter a word: " ..
    get word
    exit when word = "done" or word = "Done"
    if word < first_word then
        first_word := word
    end if
end loop
put "The word '", first_word,"' is alphabetically first."


