loop
    new_word := " "
    put "Please enter a word: " ..
    get word
    exit when word = "done" or word = "Done"
    for i : 1 .. length (word)
        if index (word (i), letter) = 0 then
            new_word += word (i)
        end if
    end for
    put new_word
end loop


%Question 2B 
var letter : string
var new_word : string := " "
var word : string

put "To exit the program, please enter '123'."
put "Please enter a word: " ..
get word
loop
    put "What letter would you like removed? (lowercase): " ..
    get letter
    exit when letter = "123"
    for i : 1 .. length (word)
        if index (word (i), letter) = 0 then
            new_word += word (i)
        end if
    end for
    put new_word
    new_word := " "
end loop
    

%Question 3
var new_word : string := " "
var word : string

put "To exit the program please enter 'done'."
loop
    put "Please enter a word: " ..
    get word
    exit when word = 'done' or word = 'Done'
    new_word := " "
    for i : 1 .. length (word)
        if index ("aeiouAEIOU", word (i)) not= 0 then
            new_word += word (i)
        else
            new_word += "%"
        end if
    end for
    put new_word
end loop


%Question 3A
var new_word : string := " "
var word : string

put "To exit the program please enter 'done'."
loop
    put "Please enter a word: " ..
    get word
    exit when word = 'done' or word = 'Done'
    new_word := " "
    for i : 1 .. length (word)
        if index (word (i), "r") = 0 then
            new_word += word (i)
        else
            new_word += "R"
        end if
    end for
    put new_word
end loop


%Question 3B
var new_word : string := " "
var word : string

put "To exit the program please enter 'done'."
loop
    put "Please enter a word: " ..
    get word
    exit when word = 'done' or word = 'Done'
    new_word := " "
    for i : 1 .. length (word)
        if word (i) <= "d" then
            new_word += "*"
        else
            new_word += word (i)
        end if
    end for
    put new_word
end loop


%Question 3C (FOLLOWING)
var new_word : string := " "
var number : int := 0
var word : string

put "To exit the program please enter 'done'."
loop
    put "Please enter a word: " ..
    get word
    exit when word = 'done' or word = 'Done'
    new_word := " "
    for i : 1 .. length (word)
        if word (i) not= "z" then
            number := ord (word (i))
            new_word += chr (number + 1)
        else
            new_word += "a"
        end if
    end for
    put new_word
end loop


%Question 3C (PREVIOUS)
var new_word : string := " "
var number : int := 0
var word : string

put "To exit the program please enter 'done'."
loop
    put "Please enter a word: " ..
    get word
    exit when word = 'done' or word = 'Done'
    new_word := " "
    for i : 1 .. length (word)
        if word (i) not= "a" then
            number := ord (word (i))
            new_word += chr (number - 1)
        else
            new_word += "z"
        end if
    end for
    put new_word
end loop


%Question 3D
var new_word : string := " "
var number : int := 0
var word : string

put "To exit the program please enter 'done'."
loop
    put "Please enter a word: " ..
    get word
    exit when word = 'done' or word = 'Done'
    new_word := " "
    for i : 1 .. length (word)
        if word (i) >= "a" and word (i) <= "z" then
            number := ord (word (i)) - ord ("a") + ord ("A")
            new_word += chr (number)
        elsif word (i) >= "A" and word (i) <= "Z" then
            number := ord (word (i)) + (ord ("z") - ord ("Z"))
            new_word += chr (number)            
        end if
    end for
    put new_word
end loop








