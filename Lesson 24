%Question 1
var word : string

put "To exit the program, please enter 'done'. "
loop
    put "Please enter a single word: "..
    get word
    exit when word = "done"
    if length (word) >= 2 then
        put "The first letter if '", word (1),"' and the last letter is '", word (*),"'."
    else
        put "Please enter a word with at least two letters."
    end if
end loop


%Question 2
Var longest_word : string := " "
var word : string
var word_length : int := 0

for i : 1 .. 10
    put "Please enter a word: "..
    get word
    if length (word) > word_length then
        word_length := length (word)
        longest_word := word
    end if
end for

put "The longest word you entered was ", longest_word,"."


%Question 3
var amount_of_vowels : int := 0
var word : string

put "Please enter a single word: " ..
get word
for i : 1 .. length (word)
    if word (i) = "a" or word (i) = "e" or word (i) = "i" or word (i) = "o" or word (i) = "u" then
        amount_of_vowels += 1  
    elsif word (i) = "A" or word (i) = "E" or word (i) = "I" or word (i) = "O" or word (i) = "U" then
        amount_of_vowels += 1
    end if
end for 

put "The word you entered has ", amount_of_vowels," vowel(s)."


%Touque 1
var word : string

put "Please enter a single word: " ..
get word
for i : 1 .. length (word)
    put word (i)
end for


%Touque 2
var word : string

put "Please enter a single word: " ..
get word
for decreasing i : length (word) .. 1
    put word (i)
end for

 
%Touque 3
var word : string

put "Please enter a single word: " ..
get word
put word (*) ..
for i : 2 .. length (word) - 1
    put word (i) ..
end for
put word (1)



