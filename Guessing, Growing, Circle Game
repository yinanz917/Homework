import GUI

var backButton : int
var buttonCircle : int
var buttonGuess : int
var buttonGrowing : int
var grow : int
var quitButton : int

View.Set ("graphics: 500; 500")
Window.Set (defWinId, "title: Guessing Game and Growing Button")

procedure GuessingGame
    var number : int
    var user_input : int
    
    GUI.Hide (buttonGuess)
    GUI.Hide (buttonGrowing)
    GUI.Hide (grow)
    GUI.Hide (buttonCircle)
    GUI.Show (backButton)
    put "Guess my number between 1 and 1000."
    randint (number, 1, 1000)
    loop
        put "Guess: " ..
        get user_input
        exit when user_input = number  
        if user_input > number then
            colour (blue)
            put "Lower"
            colour (black)
        elsif user_input < number then
            colour (red)
            put "Higher"
            colour (black)
        end if
    end loop
    put "Congratualtions! You guessed the number!"
end GuessingGame

procedure GrowingButton 
    GUI.Hide (buttonGuess)
    GUI.Hide (buttonGrowing)
    GUI.Hide (buttonCircle)
    GUI.Show (backButton)
    GUI.Show (grow)
    GUI.SetSize (grow, 5 + GUI.GetWidth (grow), 5 + GUI.GetHeight (grow))
end GrowingButton 

procedure CircleGame
    var x, y, radius, Colour : int
    
    GUI.Hide (buttonGuess)
    GUI.Hide (buttonGrowing)
    GUI.Show (backButton)
    GUI.SetLabel (buttonCircle, "Random Circle!")
    randint (x, 1, maxx)
    randint (y, 1, maxy)
    randint (radius, 1, 250)
    randint (Colour, 1, 255)
    drawfilloval (x, y, radius, radius, Colour)
    GUI.Refresh
end CircleGame

procedure back
    cls
    GUI.Refresh
    GUI.Hide (backButton)
    GUI.Hide (grow)
    GUI.Show (buttonGuess)
    GUI.Show (buttonGrowing)
    GUI.Show (buttonCircle)
    GUI.SetSize (grow, 50, 10)
    GUI.SetLabel (buttonCircle, "Circle Game")
end back

grow := GUI.CreateButton (175, 200, 50, "Click to Grow", GrowingButton)
buttonCircle := GUI.CreateButton (350, 100, 50, "Circle Game", CircleGame)
buttonGuess := GUI.CreateButton (200, 100, 50, "Guessing Game", GuessingGame)
buttonGrowing := GUI.CreateButton (50, 100, 50, "Growing Button", GrowingButton)
quitButton := GUI.CreateButton (50, 25, 20, "Quit", GUI.Quit)
backButton := GUI.CreateButton (350, 25, 50, "Back", back)

GUI.Hide (backButton)
GUI.Hide (grow)

loop
    exit when GUI.ProcessEvent
end loop



