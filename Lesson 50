%Question 1
var count : int
get count

var list : array 1 .. count of int
var current_smallest : int
var where : int
var current_number : int

for i : 1 .. count
    get list (i)
end for

current_smallest := list (1)
for i : 1 .. count
    current_number := list (i)
    current_smallest := list (i)
    for j : i .. count
        if list (j) <= current_smallest then
            current_smallest := list (j)
            where := j
        end if
    end for
    list (i) := current_smallest
    list (where) := current_number
end for

for i : 1 .. count
    put list (i)
end for


